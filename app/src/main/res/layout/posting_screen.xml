<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout"
        android:layout_marginBottom="57dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/adViewContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />


        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/posting_reycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/border">

        <LinearLayout
            android:id="@+id/action_button_instru"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@color/cardview_dark_background"
            android:visibility="gone">

            <TextView
                android:id="@+id/instructions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textColor="@color/cardview_light_background"
                android:text="KAMAL"/>
        </LinearLayout>

       <LinearLayout
           android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:layout_weight="1"
           android:visibility="visible">

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/button_shrug"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/command"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                />

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/button_add"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/add_user"
                android:layout_weight="2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/button_clear"
                android:layout_width="35dp"
                android:layout_height="16dp"
                android:background="@drawable/eraser"
                android:layout_weight="3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/button_who"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@drawable/channel"
                android:layout_weight="4"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/button_pwb"
                android:layout_width="35dp"
                android:layout_height="21dp"
                android:background="@drawable/broadcast"
                android:layout_weight="5"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/button_help"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/info"
                android:layout_weight="6"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/border">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="Type a message..."
            android:id="@+id/message_edit"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:layout_gravity="bottom"
            android:layout_weight="8"
            />


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:text="New Button"
            android:layout_marginLeft="2dp"
            android:id="@+id/button"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:src="@drawable/ic_send_black_24px"
            />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>


